<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{{meta_title}}</title>

    <!-- Theme Style -->
    <link rel="stylesheet" type="text/css" href="{{asset "css/ihana.css"}}" media="screen" title="no title" charset="utf-8" />
    <link rel="icon" type="image/png" href="{{asset "images/favicon.png"}}" />

    <!-- Ghost Head -->
    {{ghost_head}}
</head>

<body>

    <!-- Main Sidebar -->
    {{> "sidebar"}}

    <!-- Sidebar Toggle -->
    <a class="ain-sidebar-toggle ain-button-link" id="ain-sidebar-toggle"></a>

    <!-- Content Wrapper -->
    <section id="ain-main-wrapper" class="container ain-wrapper">
        <section class="container">
            {{{body}}}
        </section>
        {{> "footer"}}
    </section>

    <!-- Ghost Foot -->
    {{ghost_foot}} {{> "google_analytics"}}

    <script type="text/javascript" src="{{asset "js/ihana.js"}}"></script>

    {{> "google_analytics"}}
</body>

</html>
