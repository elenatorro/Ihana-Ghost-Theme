{{#author}}

    <section class="ain-panel">
        <section class="ain-panel-body">
            <section class="row">
                <section class="three columns u-text-centered">
                    {{#if image}}
                        <img src="{{image}}" class="ain-image-squared" />
                    {{/if}}
                </section>
                <section class="nine columns">
                    <h3>{{name}}</h3>
                    {{#if bio}}
                        <p>{{bio}}</p>
                    {{/if}}
                    <a class="ain-button" id="moreAboutMe" href="{{url}}">More about me</a>
                </section>
            </section>
        </section>
    </section>

{{/author}}
